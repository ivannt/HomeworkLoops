/* Task 11. Write a program that reads from the console a positive integer 
 * number N (N < 20) and outputs a matrix like the following:*/


using System;
class OutputMatrix
{
    static void Main()
    {
        Console.Title = "OutputMatrix";

        Console.WriteLine("Enter N number: ");
        int n = int.Parse(Console.ReadLine());

        Console.WriteLine(new string('-', 22));
        for (int i = 0; i < n; i++)
        {
            for (int j = 1 + i; j <= n + i; j++)
            {
                Console.Write(j);
            }
            Console.WriteLine();
        }
        Console.WriteLine();
    }
}
